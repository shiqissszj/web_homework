<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Management</title>
    <link rel="stylesheet" href="/styles/style.css">
</head>
<body>
<header>
    <h1>用户管理</h1>
    <nav>
        <a href="/index.html">返回首页</a>
    </nav>
</header>
<main>
    <h2>所有用户</h2>
    <table border="1">
        <thead>
        <tr>
            <th>ID</th>
            <th>用户名</th>
            <th>年龄</th>
            <th>性别</th>
            <th>地址</th>
            <th>头像</th>
        </tr>
        </thead>
        <tbody>
        <% if (users && users.length > 0) { %>
            <% users.forEach(user => { %>
                <tr>
                    <td><%= user.id %></td>
                    <td><%= user.name %></td>
                    <td><%= user.age || 'N/A' %></td>
                    <td><%= user.gender || 'N/A' %></td>
                    <td><%= user.address || 'N/A' %></td>
                    <td>
                        <img src="<%= user.imgUrl || '/images/default-avatar.jpg' %>" alt="Avatar" style="width: 50px; height: 50px; border-radius: 50%;">
                    </td>
                </tr>
            <% }) %>
        <% } else { %>
            <tr>
                <td colspan="6">没有用户数据</td>
            </tr>
        <% } %>
        </tbody>
    </table>
</main>
</body>
</html>